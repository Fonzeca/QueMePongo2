<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".creadoresDeFragments.ubicaciones.fragment_ubicaciones_lista">


    <ListView
        android:id="@+id/listViewCiudadesUsuario"
        style="@style/Widget.AppCompat.Light.ListView.DropDown"
        android:layout_width="405dp"
        android:layout_height="279dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toTopOf="@+id/textView_seleccionCiudad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView_seleccionCiudad"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

    </ListView>


    <TextView
        android:id="@+id/textView_seleccionCiudad"
        android:layout_width="409dp"
        android:layout_height="76dp"
        android:layout_marginBottom="224dp"
        android:fontFamily="@font/roboto"
        android:text="Selecionaste: "
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/buttonEliminar_miCiudad"
        android:layout_width="135dp"
        android:layout_height="49dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/boton_background"
        android:fontFamily="@font/roboto_condensed_light"
        android:text="@string/botonEliminar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.115"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_seleccionCiudad" />

    <Button
        android:id="@+id/buttonPredeterminar_miCiudad2"
        android:layout_width="139dp"
        android:layout_height="51dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/boton_background"
        android:fontFamily="@font/roboto_condensed_light"
        android:text="@string/botonPredeterminar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.117"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonEliminar_miCiudad"
        app:layout_constraintVertical_bias="0.147" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="156dp"
        android:layout_height="39dp"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/roboto_condensed_light"
        android:text="Ver mapa satelital"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.874"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_seleccionCiudad" />

    <ImageButton
        android:id="@+id/imageViewSatelite"
        android:layout_width="161dp"
        android:layout_height="50dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/boton_background"
        android:src="@mipmap/ic_satelite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.872"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>