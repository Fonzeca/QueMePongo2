<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.s21.quemepongo2front">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_quemepongo_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_quemepongo_round"
        android:supportsRtl="true"
        android:theme="@style/QueMePongo2"
        android:usesCleartextTraffic="true"
        android:windowSoftInputMode="adjustPan"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".SplashArt"
            android:label="@string/nav_header_title">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".creadoresDeFragments.Sesion.LoginActivity"
            android:label="@string/nav_header_title"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
            android:name=".creadoresDeFragments.Sesion.CreacionUsuario_Activity"
            android:label="@string/title_activity_usuariologin" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustPan"
        />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>